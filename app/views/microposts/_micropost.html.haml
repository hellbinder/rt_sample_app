%li{id: micropost.id}
  %span.content= wrap(micropost.content)
  %span.timestamp
    Posted #{time_ago_in_words(micropost.created_at)} ago
    = render partial: "shared/feed_options", locals: { micropost: micropost }
    -unless micropost.replies.empty?
      %ol{:class => "replies"}
        -micropost.replies.each do |reply|
          %li{id: reply.id}
            = link_to gravatar_for(reply.user, size:30), reply.user
            %span.user
              = link_to reply.user.name, reply.user
            %span.content #{link_to micropost.user.reply_username, micropost.user} #{reply.content}
            %span.timestamp
              Posted #{time_ago_in_words(reply.created_at)} ago.