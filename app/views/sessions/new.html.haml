- provide(:title, 'Sign in')
%h1 Sign in
.row
  .span6.offset3
    = form_tag(sessions_path) do 
      = label_tag :email, "Email"
      = text_field_tag :email
      = label_tag :password, "Password"
      = password_field_tag :password

      = submit_tag "Sign in", id: "submit", name: "submit", class: "btn btn-primary", style: "background-color:#333;", disabled: false, disable_with: "Signing in..."
    
    %p New user? #{ link_to "Sign up now!", signup_path }
    %p Forgot Password? #{ link_to "Click here to reset it", new_password_reset_path }