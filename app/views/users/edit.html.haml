- provide(:title, 'Edit User')
%h1 Update your profile
.row
  .span6.offset3
    = form_for @user do |f|
      = render 'shared/error_messages'
      = render partial: "form_fields", locals: { f: f, text: "Save changes", disabled_text: "Saving..."}
    = gravatar_for @user
    = link_to("change", "http://www.gravatar.com/emails", target: "_blank")


  

