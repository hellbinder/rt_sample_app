- provide(:title, 'Sign up')
%h1 Sign Up
.row
  .span6.offset3
    = form_for @user do |f|
      = render 'shared/error_messages'
      = f.label :name, "Name"
      = f.text_field :name

      = f.label :email, "Email"
      = f.text_field :email

      = f.label :password, "Password"
      = f.password_field :password

      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation

      = f.submit "Create my Account", disable_with: 'Creating Account...', class: "btn-large btn-primary"

  

